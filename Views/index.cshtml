@{
    Layout="Shared/_Layout.cshtml";
}

<form action="/results" method="post">
  <div class="form-group">
    <label for="initial-word">Enter a word:</label>
    <input type="text" name="initial-word" id="initial-word" required>
  </div>
  <div class="form-group">
    <label for="phrase">Enter words separated by spaces (no commas) to check if they are anagrams of the first word:</label>
    <input type="text" name="phrase" id="phrase" required>
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Bum Sit</button>
</form>
